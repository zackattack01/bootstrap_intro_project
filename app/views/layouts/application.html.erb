<!DOCTYPE html>
<html>
<head>
  <title>AuthDemo</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
<div class="container-fluid">
<div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
      <span class="sr-only">Toggle nav</span>
      </button>
</div>
 <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
   <ul class="nav navbar-nav">
   <% unless logged_in? %>
		 <li><%= link_to 'sign in!', new_session_url %></li>
		 <li><%= link_to 'or sign up!', new_user_url %></li>
	 <% end %>
	 <li><%= link_to 'home', static_pages_home_url %></li>
	 <li><%= link_to 'about', static_pages_about_url %></li>
	 <li><%= link_to 'contact us', static_pages_contact_url %></li>
	 </ul>
 </div>
</div>
</nav>
<div class="container">
<%= yield %>
</div>

<% if logged_in? %>
  <li><%= button_to 'Log out', session_url, method: :delete %>
<% end %>
</body>
</html>
